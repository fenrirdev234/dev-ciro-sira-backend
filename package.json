{
  "name": "dev-ciro-sira-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/src/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx --watch  src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "build": "node --run type-check && node --run  build:clean &&  node --run build:generate-dist",
    "build:clean": "rimraf dist; exit 0",
    "build:generate-dist": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "lint": "eslint .",
    "lint:file": "eslint",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "services": "docker compose up -d mongodb",
    "services:stop": "docker compose down",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "5.1.1",
    "blurhash": "2.0.5",
    "cloudinary": "2.5.1",
    "cors": "2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "16.4.7",
    "express": "4.21.2",
    "express-rate-limit": "7.5.0",
    "helmet": "8.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.10.1",
    "mongoose-paginate-v2": "1.9.0",
    "morgan": "1.10.0",
    "multer": "1.4.5-lts.1",
    "sharp": "0.33.5",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "winston": "3.17.0",
    "zod": "3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@eslint/js": "9.20.0",
    "@faker-js/faker": "9.7.0",
    "@types/bcrypt": "5.0.2",
    "@types/cors": "2.8.17",
    "@types/eslint__js": "8.42.3",
    "@types/express": "5.0.0",
    "@types/jsonwebtoken": "9.0.9",
    "@types/morgan": "1.9.9",
    "@types/multer": "1.4.12",
    "@types/supertest": "6.0.2",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.8",
    "@vitest/coverage-v8": "3.1.2",
    "@vitest/eslint-plugin": "1.2.1",
    "eslint": "9.27.0",
    "eslint-config-prettier": "10.1.1",
    "eslint-plugin-perfectionist": "4.10.1",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-security": "3.0.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "15.15.0",
    "husky": "9.1.7",
    "lint-staged": "15.5.0",
    "prettier": "3.5.3",
    "rimraf": "^6.0.1",
    "supertest": "7.0.0",
    "tsx": "4.19.3",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1",
    "vitest": "^3.1.2"
  }
